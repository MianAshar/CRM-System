			<div class="container">
			
			<div class="panel panel-default panel-info">
				<div class="panel-heading"><h4 class="panel-title">User Information</h4></div>
				<div class="panel-body">
					
					<form action="">
			<div class="col-lg-5">
			      <label for="element-1" class="control-label">First Name</label>
						<input type="text" class="form-control" placeholder="First Name">
						<% do %>
						  <%= label_tag(:text1, "Please enter your name") %>
						  <%= text_field_tag :text1 %>
						  <% end %>
						<label for="element-1" class="control-label">Last Name</label>
						<input type="text" class="form-control" placeholder="Last Name"><br>
						
						 <label for="inputgender" class="col-md-4">Gender</label>
						 
                         <div class="col-md-8 "> 
                         <label>
                         <input type="radio" name="gender">Male</label>
                         <label>
	                     <input type="radio" name="gender">Female</label><br>
						 </div><br>
						 
						<label for="element-1" class="control-label">Age</label>
						<input type="number" class="form-control" placeholder="Age">
					</div>
				
					
				</div>
			</div>
			
			
			<div class="panel panel-default panel-info">
				<div class="panel-heading"><h4 class="panel-title">Contact Information</h4></div>
				<div class="panel-body">
					
					<form action="">
			<div class="col-lg-5">
			      <label for="element-1" class="control-label">Phone#</label>
						<input type="number" class="form-control"  id="" placeholder="0423-111111">
						
						<label for="element-1" class="control-label">Mobile#</label>
						<input type="number" class="form-control" id=""  placeholder="03212345672">
						
						 
						<label for="element-1" class="control-label">Email id</label>
						<input type="email" class="form-control"id="" placeholder="abcd@.....">
					</div>
				
					
				</div>
			</div>
			
			<div class="panel panel-default panel-info">
				<div class="panel-heading"><h4 class="panel-title">Account Information</h4></div>
				<div class="panel-body">
					
					<form action="">
			<div class="col-lg-5">
			
			      <label for="element-1" class="control-label">User Name</label>
						<input type="text" class="form-control"  id="" placeholder="User name">
						
						<label for="element-1" class="control-label">Password</label>
						<input type="password" class="form-control" id=""  placeholder="Password">
						
						 
						<label for="element-1" class="control-label">Confirm Password</label>
						<input type="password" class="form-control"id="" placeholder="Confirm Password"><br><br>
						
						<img id="captcha" src="" alt="CAPTCHA Image" />
      <a href="#" onclick="document.getElementById('captcha').src = '  ' + Math.random(); return false" class="btn btn-info btn-sm">Show a Different Image</a><br/>
      <div class="form-group" style="margin-top: 10px;">
        <input type="text" class="form-control" name="captcha_code" id="captcha_code" placeholder="For security, please enter the code displayed in the box." />
        <span class="help-block" style="display: none;">Please enter the code displayed within the image.</span>
      </div>
						
					</div>
					
					 
				
					
				</div>
			</div>
