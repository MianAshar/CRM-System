  <body>
  
    <header>
		<div class="jumbotron">
			<div class="container">
			<div class="pull-right">
			
				<h2>
				
				    Welcome To Electronic Complaint Portal</h2>
				<h5>The portal that handles all complaints that you raise against the participant organization</h5>
			</div>
			
	<div id="image"	>	
 <img src="complaints.png" alt="Thumbnail Image 1" class="img-responsive">
 </div>
 
			</div> 
		</div>
		
		<div class="navbar navbar-default navbar-fixed-top navbar-inverse">
		
			<div class="navcolor">
			<div class="navbar-header">
					<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#example">
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
						<span class="icon-bar"></span>
					</button>
					</div>
				
				<div class="collpase navbar-collapse" id="example">
					<ul class="nav navbar-nav">
						<li><a href="">Company SignUp</a></li>
						<li><a href="">About Us</a></li>
						<li><a href="">FAQ</a></li>
					</ul>

				</div>

			</div>
			</div>
			
			<div class="container">
			<ol class="breadcrumb">
				<button type="button" class="btn btn-default" aria-label="Left Align">
  <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
</button>
		
				
			</ol>
		</div>
			
			
			<div class="container">
			
			<div class="row">
			
				<div class="col-sm-4">
				<div class="panel panel-default panel-info">
				<div class="panel-heading"><h4 class="panel-title">Login to your account</h4></div>
				<div class="panel-body">
           
        
	       		<%=  form_for(:session , url: login_path) do |f| %>

    <div class="input-group">

			    <%= f.label :Username %><br>
	      		<%= f.text_field :Username, { :class => 'form-control', :placeholder => '' } %><br>

  </div><br>
  
<div class="input-group">
		  		<%= f.label :password %><br>
		  		<%= f.password_field :password, { :class => 'form-control', :placeholder => ''} %><br>
</div> <br>


						<%= f.submit "Login", class: "btn btn-info" %><br><br>

	<div id=buttons>
  <%= link_to "New User", signup_path, class:"btn btn-sm btn-primary", class:"control-label"%><br><br>
  <%= link_to "Forgot Password/Username", '#', class:"btn btn-sm btn-primary", class:"control-label" %>
	 </div>
		</div>
				<% end %>
				
			</div>
			</div>
			<div class="col-sm-8">
					<div class="text-center">
					Welcome to Electronic Complaint's Portal. This portal ensures a genuine forum for customers to voice their opinions and submit their comments in order to improve services and enhance practices.</div>
				
				</div>
			</div>
			
			</div>
			
			
				
		</div>
			
			
		
	</header>

		


	<footer>
		<div class="container">
			
		</div> <!-- end container -->
	</footer>

